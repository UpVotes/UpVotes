@model UpVotes.Models.OverviewNewsViewModel


<div class="content news-view">
    <div class="row news-wrap">
        <div class="col-lg-12">
            @foreach (var newsList in Model.OverviewNewsData)
            {
                <div class="news-list">
                    @if (newsList.CompanyOrSoftwareID != null)
                    {
                        <div onclick="GetCompany('@newsList.SoftwareCompanyName')" class="news-logo">
                            <img title="@newsList.SoftwareCompanyName" class="lazy" src="" data-src="/images/CompanyLogos/@newsList.LogoName">
                        </div>
                    }
                    else
                    {
                        <div class="news-logo">
                            <img title="@newsList.SoftwareCompanyName" class="lazy" src="" data-src="/images/@newsList.LogoName">
                        </div>
                    }
                    <div class="news-info">
                        <h3 class="title"><i class="fa fa-arrow-right"></i> @newsList.NewsTitle</h3>
                        <p>@Html.Raw(newsList.NewsDescription)</p>
                        <div class="action">
                            <a target="_blank" href="/news/@newsList.NewsTitleUrl.ToLower()">
                                <button type="button" class="btn btn-sm btn-dblue">View full post</button>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
